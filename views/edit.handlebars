<a href="/" class="bs-light">
  <button type="button" class="btn btn-primary">QAYTISH</button>
</a>
<form method="post" action={{action}}>
  <div class="row m-1">
    <div class="col">
      <input
        name="spot"
        type="text"
        class="form-control"
        placeholder="Joyi*"
        value={{drug.spot}}
      />
    </div>
    <div class="col">
      <input
        name="name"
        type="text"
        class="form-control"
        placeholder="Nomi*"
        value={{drug.name}}
      />
    </div>
  </div>
  <div class="row m-1">
    <div class="col">
      <input
        name="type"
        type="text"
        class="form-control"
        placeholder="Shakli"
        value={{drug.type}}
      />
    </div></div>
  <div class="row m-1">
    <div class="col">
      <input
        name="company"
        type="text"
        class="form-control"
        placeholder="Kampaniyasi"
        value={{drug.company}}
      />
    </div>
    <div class="col">
      <input
        name="price"
        type="number"
        class="form-control"
        placeholder="Narxi*"
        autocomplete="off"
        value={{drug.price}}
      />
    </div>
  </div>
  <div class="row m-1">
    <div class="col">
      <input
        name="count"
        type="number"
        class="form-control"
        placeholder="Soni"
        value={{drug.count}}
      />
    </div>
    <div class="col">
      <input
        name="date_to"
        type="date"
        class="form-control"
        placeholder="Amal qilish muddati"
        value={{dateFormat drug.date_to "YYYY-MM-DD"}}
      />
    </div>
  </div>
  <div class="row m-1">
    <div class="col">
      <input
        name="given_price"
        type="number"
        class="form-control"
        placeholder="Kelgan narxi"
        autocomplete="off"
        value={{drug.given_price}}
      />
    </div>
    <div class="col">
      <input
        name="companent"
        type="text"
        class="form-control"
        placeholder="Tarkibi"
        value={{drug.companent}}
      />
    </div>
  </div>
  <button type="submit" class="btn btn-primary m-3">Yangilash</button>
</form>